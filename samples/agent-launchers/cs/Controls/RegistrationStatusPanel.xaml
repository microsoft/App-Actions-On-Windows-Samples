<UserControl
    x:Class="SampleAgentLauncher.Controls.RegistrationStatusPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SampleAgentLauncher.ViewModels"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Spacing="15">
        <ItemsControl ItemsSource="{x:Bind ViewModel.StatusItems, Mode=OneWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:RegistrationStatusItemViewModel">
                    <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,0,0,0">
                        <TextBlock Text="{x:Bind StatusText, Mode=OneWay}"
                                   Foreground="{x:Bind StatusForeground, Mode=OneWay}"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                        
                        <Button Content="{x:Bind ButtonContent, Mode=OneWay}"
                                Command="{x:Bind ToggleRegistrationCommand}"
                                Padding="20,8"
                                IsEnabled="{x:Bind ButtonEnabled, Mode=OneWay}"
                                Visibility="{x:Bind ButtonVisibility, Mode=OneWay}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>

